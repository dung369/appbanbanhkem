rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Products collection
    match /products/{productId} {
      // Anyone can read products
      allow read: if true;
      
      // Only authenticated admin can create, update, delete products
      allow create, update, delete: if request.auth != null && request.auth.token.email == "trandaidung9a1@gmail.com";
    }
    
    // Orders collection
    match /orders/{orderId} {
      // Users can read their own orders
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || request.auth.token.email == "trandaidung9a1@gmail.com");
      
      // Authenticated users can create orders
      allow create: if request.auth != null;
      
      // Only admin can update/delete orders
      allow update, delete: if request.auth != null && request.auth.token.email == "trandaidung9a1@gmail.com";
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own data
      allow read: if request.auth != null && (request.auth.uid == userId || request.auth.token.email == "trandaidung9a1@gmail.com");
      
      // Users can create/update their own data
      allow create, update: if request.auth != null && request.auth.uid == userId;
      
      // Only admin can delete users
      allow delete: if request.auth != null && request.auth.token.email == "trandaidung9a1@gmail.com";
    }
    
    // Cart collection
    match /carts/{cartId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
